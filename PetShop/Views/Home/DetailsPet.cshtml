@model PetShop.Models.Pet

@{
    ViewBag.Title = "DetailsPet";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}

<div class="">
    <div class="ban-top " style="background-color: cadetblue">
        <div class="container">
            <div class="ban-top-con">
                <div class="top_nav_left">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse menu--shylock" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav menu__list">
                                    <li class="menu__item"><a class="menu__link" href="/Home/Index">TRANG CHỦ <span class="sr-only">(current)</span></a></li>
                                    <li class=" menu__item"><a class="menu__link" href="@Url.Action("MenuPet", "Search")">Thú cưng</a></li>
                                    <li class=" menu__item"><a class="menu__link" href="/ShoppingCarts">Giỏ hàng</a></li>
                                    @Html.Action("Tool", "Home")
                                </ul>
                            </div>
                    </nav>

                </div>
       
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div>
        <div>
            <div class="news-left">
                <div class="container">
                    <h3 class="title ">@Model.PetName</h3>
                    <div class="col-md-6 col-news-right ">
                        <div class="col-news-top">
                            <div class="date-in">
                                <img class="img-responsive" src="~/Content/images/@Model.Image" alt="" style="width: 100%; height: 300px">
                                <a href="@Url.Action("AddItem", "ShoppingCarts", new { @id = Model.IDPet})">
                                    <div class="month-in">

                                        <span><img src="~/Content/images/icon1.png" alt=" "></span>
                                        <p>Thêm vào giỏ</p>
                                    </div>
                                </a>
                            </div>
                            <div class="col-bottom">
                                <h4>Mô tả</h4>
                                <p>@Model.Descreptions</p>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6 col-news ">
                        <div class="col-news-top">
                            <div class="date-in" style="font-size: 20px;">
                                <b>Tên: <span style="color: brown">@Model.PetName</span></b>
                                <br />
                                <b>
                                    Giới tính thú cưng: <span style="color: brown">
                                        @if (Model.Sex == true)
                                        {
                                            <b>Đực</b>
                                        }
                                        else
                                        {
                                            <b>Cái</b>
                                        }
                                    </span>
                                </b>
                                <br />
                                <b>Mô tả: <span style="color: brown">@Model.Descreptions</span></b>
                                <br />
                                <b>Tuổi đời: <span style="color: brown">@Model.Age Tuổi</span></b>
                                <br />
                                <b>Ngày đăng: <span style="color: brown">@Model.DateCreate</span></b>
                                <br />
                                <b>Chủng loại: <span style="color: brown">@Model.Species.SpeciesName</span></b>
                                <br />
                                @{
                                    float tmp = (float)Model.Price;
                                    int tmprate = (int)Model.Rate;
                                }
                                <b style="font-size: 25px">Giá cả: <span style="color: red">@tmp.ToString("0.") VNĐ</span></b><br />
                                <b>Đánh giá:
                                @if(Model.Rate == tmprate)
                                {
                                    for(int i = 1;i <= tmprate;i++)
                                    {
                                        <a href="@Url.Action("Index", "Rating", new {@id = Model.IDPet, rate = i})"><i class="fa fa-star" aria-hidden="true" style="color: orange"></i></a>
                                    }
                                    for(int i = tmprate + 1;i <= 5;i++)
                                    {
                                        <a href="@Url.Action("Index", "Rating", new {@id = Model.IDPet, rate = i})"><i class="far fa-star" aria-hidden="true" style="color: orange"></i></a>
                                    }
                                }
                                else
                                {
                                    for(int i = 1;i <= tmprate;i++)
                                    {
                                        <a href="@Url.Action("Index", "Rating", new {@id = Model.IDPet, rate = i})"><i class="fa fa-star" aria-hidden="true" style="color: orange"></i></a>
                                    }
                                    <a href="@Url.Action("Index", "Rating", new {@id = Model.IDPet, rate = tmprate + 1})"><i class="fa fa-star-half-alt" aria-hidden="true" style="color: orange"></i></a>
                                    for(int i = tmprate + 2;i <= 5;i++)
                                    {
                                        <a href="@Url.Action("Index", "Rating", new {@id = Model.IDPet, rate = i})"><i class="far fa-star" aria-hidden="true" style="color: orange"></i></a>
                                    }
                                }
                                </b>
                                <br /><br />
                                <a href="@Url.Action("AddItem", "ShoppingCarts", new { @id = Model.IDPet})" class="btn btn-danger"><b>THÊM GIỎ HÀNG</b></a>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
@Html.Action("Index", "Comments", new { @id = Model.IDPet })
<br />
