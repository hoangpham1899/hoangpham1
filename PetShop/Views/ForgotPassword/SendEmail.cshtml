@model PetShop.Models.Mail

@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}

<h2>SendEmail</h2>

@using (Html.BeginForm())
{
    <div class="container">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group ">
            <div class="col-md-12">
                @Html.EditorFor(model => model.ToEmail, new { htmlAttributes = new { @placeholder = "Enter your email", @class = "txt" } })
                @Html.ValidationMessageFor(model => model.ToEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            <div class="col-md-12">
                <input type="submit" value="Send" class="btn btn-danger" />
            </div>
        </div>

        <div class="alert alert-success" role="alert">
            <p>@ViewBag.Status</p>
        </div>
    </div>

}